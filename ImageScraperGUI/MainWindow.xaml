<Window x:Class="ImageScraperGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageScraperGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBox Name="textBoxUrl"/>
            <Button Content="Dump Images" Click="Button_Click" />
            <ListBox Height="200" Name="listBoxResult" SelectionChanged="listBoxResult_SelectionChanged" />
            <Image Name="imagePreview"/>
            <Label Content="Click on an entry to view a small Preview." />
        </StackPanel>
       

    </Grid>
</Window>
